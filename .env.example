# Meshy API Configuration
MESHY_API_KEY=your_api_key_here
MESHY_API_URL=https://api.meshy.ai

# Houdini Configuration
HOUDINI_PATH=${HOUDINI_PATH};${PLUGIN_ROOT}
PLUGIN_ROOT=/path/to/plugin

# Cache Configuration
MESHY_CACHE_DIR=${PLUGIN_ROOT}/cache
MAX_CACHE_SIZE_MB=1000
CACHE_RETENTION_DAYS=7

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=${PLUGIN_ROOT}/logs/meshy_plugin.log

# Performance Configuration
MAX_CONCURRENT_JOBS=3
REQUEST_TIMEOUT_SEC=30
RETRY_ATTEMPTS=3
RETRY_DELAY_SEC=5

# UI Configuration
DEFAULT_TEXTURE_RESOLUTION=2048
DEFAULT_MODEL_FORMAT=fbx
ENABLE_DARK_MODE=true

# Development Configuration
DEBUG_MODE=false
ENABLE_PROFILING=false
TEST_MODE=false 